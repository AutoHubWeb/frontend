# Environment Configuration
NODE_ENV=development
PORT=3000

# Application Configuration
NEXT_PUBLIC_APP_NAME=SmartLearnAI
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_DEMO_MODE=false

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-api-domain.com
NEXT_PUBLIC_AUTH_SERVICE_URL=https://your-api-domain.com

# Stripe Configuration (Client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Configuration (Server-side)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Debug Configuration
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCKING=false

# Security Configuration (Server-side only)
JWT_SECRET=your_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Development Configuration
NEXT_PUBLIC_DEV_SERVER_PORT=3000
NEXT_PUBLIC_ENABLE_LOGGING=true
